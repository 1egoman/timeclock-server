<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <meta name="description" content="Waltz makes creating nice looking invoices for freelance developers easy and intuitive, so you can save time and work on what you love." />
  <title><%- title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <% if (ENV_DEVELOPMENT) { %>
    <script src="http://localhost:35729/livereload.js"></script>
  <% } %>
</head>
<body>

<% if (typeof no_nav === "undefined" || !no_nav) { %>
  <nav class="navbar navbar-<%= typeof style === "undefined" ? "light" : style %>" style="margin-bottom: 0px;">
    <div class="container-fluid">
      <div class="navbar-header">
        <button
          type="button"
          class="navbar-toggle collapsed"
          data-toggle="collapse"
          data-target="#nav"
          aria-expanded="false"
        >
          <span class="sr-only">Toggle navigation</span>
          <i class="fa fa-bars"></i>
        </button>
        <span class="navbar-brand">
          <img src="/img/logo.svg" />
        </span>
      </div>

      <div class="collapse navbar-collapse" id="nav">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <!-- <li><a href="/pricing">Pricing</a></li> -->
        </ul>
        <ul class="nav navbar-nav pull-right">
          <% if (user) { %>
            <li><a href="/app">To the app</a></li>
            <li class="dropdown">
              <a
                href
                class="dropdown-toggle"
                data-toggle="dropdown"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
              >
              <%= user.username %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><a href="/app/settings">Settings</a></li>
                <li><a href="/auth/logout">Logout</a></li>
              </ul>
            </li>
          <% } else { %>
            <li><a href="/login" ref="loginnav">Login</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
<% } %>
