var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
        datasets: [{
            label: 'Hours of work',
            data: [5, 6, 8, 10, 7],
            backgroundColor: "#51c4c4",
            }, {
              label: 'Commits',
              data: [8, 10, 5, 15, 8],
              backgroundColor: "#995fd4",
            }]
    },
    options: {
        responsive: true,
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>


